<button id="char">C</button>
<textarea id="text_input">this is a textarea</textarea>
{% endblock %}

{% block scripts %}
    <script type="module">
        import {character_to_binary_string} from "{{ static('js/punchcards.js') }}";
        const textarea = $('#text_input');
        console.log(textarea.val());
        function click_handler() {
            const binary_string = character_to_binary_string(textarea.val());
            textarea.val(binary_string);
        }
        $('#char').click(click_handler);
    </script>

{% endblock %}