<div class='card'>
    <a href="{% url 'story' story %}">
        <img src="{{ static('img/stories/' + story + '-teaser.png') }}"
             class="card-img-top"/>
    </a>
    <div class='card-body'>
        <h5>{% block story_title %}{% endblock %}</h5>
        {% block story_teaser %}{% endblock %}
    </div>
</div>
