{% extends "base.jinja2" %}

{% block title %} Person {% endblock %}

{% block self %}
    <h1>
        You're looking at {{person_obj.first}} {{person_obj.last}}
    </h1>
{% endblock %}

{% block table %}

    {% if len(document_written_objs) != 0 %}
        <h3>{{ person_obj.first }} {{ person_obj.last }} wrote some files</h3>
        <br>
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Document Name</th>
                <th scope="col">Link</th>
            </tr>
            </thead>
            <tbody>
            {% for item in document_written_objs %}
                <tr>
                    <th scope="row">{{ loop.index }} </th>
                    <td>{{ item }}</td>
                    <td><a href="/dj_comp_hist/doc/{{ item.pk }}">Link</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

    {% if len(document_received_objs) != 0 %}
        <h3>{{ person_obj.first }} {{ person_obj.last }} received some files</h3>
        <br>
        <table class="table">
            <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Document Name</th>
                <th scope="col">Link</th>
            </tr>
            </thead>
            <tbody>
            {% for item in document_received_objs %}
                <tr>
                    <th scope="row">{{ item.id }} </th>
                    <td>{{ item }}</td>
                    <td><a href="/dj_comp_hist/doc/{{ item.pk }}">Link</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

    {% if len(document_cced_objs) != 0 %}
        <h3>{{ person_obj.first }} {{ person_obj.last }} was cced on some files</h3>
        <br>
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Document Name</th>
                <th scope="col">Link</th>
            </tr>
            </thead>
            <tbody>
            {% for item in document_cced_objs %}
                <tr>
                    <th scope="row">{{ item.id }} </th>
                    <td>{{ item }}</td>
                    <td><a href="/dj_comp_hist/doc/{{ item.pk }}">Link</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

{% endblock %}


</body>
</html>