{% extends "simulations/base.jinja2" %}

{% block buttons %}
    <button class="btn btn-primary btn-small" id="step_button" data-step="10" data-intro="Press this button to execute the next instruction
    .">Step</button>
    <button class="btn btn-primary btn-small" id="run_button" data-step="11" data-intro="Press this button to run the program.">Run</button>
    <button class="btn btn-primary btn-small" id="reset_button" data-step="12" data-intro="Press this button to reset the computer to its initial state
    .">Reset</button>
{% endblock %}
