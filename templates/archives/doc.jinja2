
{% extends "base.jinja2" %}

{% block title %} {{ doc_obj }} {% endblock %}

{% block header %}

    {{ doc_obj }}

{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-10">
            <div class="row" >
                <iframe src="{{ static('ext/pdfjs/web/viewer.html') }}?file={{ doc_pdf_url }}"
                        height="900"
                        width="90%">
                </iframe>
            </div>
            <div class="row">
                <!--space for bottom hyperlinks to click to neighbouring documents -->
            </div>
        </div>
        <div class="col-sm-2 info_bar"  style="background-color: #343a40; color: #eeeeee;">
            <h5> About this Document: </h5>
            {% if author_person_objs or author_organization_objs %}
                <h5>Written by:</h5>
                {% if author_person_objs %}
                        {% for item in author_person_objs %}
                                <a href="{{ item.url }}">{{ item }}</a>
                        {% endfor %}
                {% endif %}
                {% if author_organization_objs %}
                        {% for item in author_organization_objs %}
                                <a href="{{ item.url }}">{{ item }}</a>
                        {% endfor %}
                {% endif %}
            {% endif %}

            <h5> Written on: </h5>
            {{ doc_obj.date }}

            {% if recipient_person_objs or recipient_organization_objs%}
                <h5>Written to:</h5>
                {% if recipient_person_objs %}
                        {% for item in recipient_person_objs %}
                                <a href="{{ item.url }}">{{ item }}</a>
                        {% endfor %}
                {% endif %}
                {% if recipient_organization_objs %}
                        {% for item in recipient_organization_objs %}
                                <a href="{{ item.url }}">{{ item }}</a>
                        {% endfor %}
                {% endif %}
            {% endif %}

            {% if cced_person_objs or cced_organization_objs %}
                <h5>Cced to:</h5>
                {% if cced_person_objs %}
                        {% for item in cced_person_objs %}
                                <a href="{{ item.url }}">{{ item }}</a>
                        {% endfor %}
                {% endif %}
                {% if cced_organization_objs %}
                        {% for item in cced_organization_objs %}
                                <a href="{{ item.url }}">{{ item }}</a>
                        {% endfor %}
                {% endif %}
            {% endif %}
            <h5> Type: </h5>
                {{ doc_obj.type }}
            <h5> Box No:</h5>
                <a href="{{ doc_obj.folder.box.url }}">{{ doc_obj.folder.box }}</a>
            <h5> Folder: </h5>
                <a href="{{  doc_obj.folder.url }}">{{  doc_obj.folder }}</a>
            <br>
            <div class="row mt-3" >
                    {% if prev_doc %}
                    <a href="{{ prev_doc.url }}" class="btn btn-primary btn-block "
                       role="button">Previous Doc</a>
                    {% endif %}
                    {% if next_doc %}
                    <a href="{{ next_doc.url }}" class="btn btn-primary btn-block"
                       role="button">Next Doc</a>
                    {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
