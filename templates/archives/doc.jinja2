
<head>
    <style>
        .sidenav{
            height: 100%;
            width: 12%;
            position: fixed;
            z-index: 1;
            top: 0;
            right: 0;
            background-color: aliceblue;
            overflow-x: hidden;
            padding-top: 70px;
        }

        @media (max-width: ) {
            .sidenav {
                position: relative;
                bottom:21%;
                width:100%;
                margin-bottom: 20%;
            }
}
    </style>
</head>
{% extends "base.jinja2" %}

{% block title %} {{ doc_obj }} {% endblock %}

{% block self %}

    <h1>{{ doc_obj }}</h1>

{% endblock %}

{% block table %}
    <div class="container mt-3 flex-wrap">
        <div class="p-2 flex-fill ">
            <iframe src={{ doc_pdf_url }}
                    width="88%" height="100%" >
            </iframe>
        </div>
        <div class="sidenav">
            <table class="table">
                <tbody>
                <tr><td>{{ doc_obj.date }}</td></tr>
                </tbody>
                {% if author_person_objs or author_organization_objs %}
                <tbody>
                <tr><td>Written by:</td></tr>
                </tbody>
                {% endif %}
            </table>

        {% if author_person_objs or author_organization_objs %}
            {% if author_person_objs %}
                    <tbody>
                    {% for item in author_person_objs %}
                        <tr>
                            <td><a href="/archives/person/{{ item.pk }}">{{ item }}</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
            {% endif %}
            {% if author_organization_objs %}
                    <tbody>
                    {% for item in author_organization_objs %}
                        <tr>
                            <td><a href="/archives/organization/{{ item.pk }}">{{ item }}</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
            {% endif %}
        {% endif %}

        {% if recipient_person_objs or  recipient_organization_objs%}
            <p>Recipient</p>
            {% if recipient_person_objs %}
                <table class="table">

                    <tbody>
                    {% for item in recipient_person_objs %}
                        <tr>

                            <td><a href="/archives/person/{{ item.pk }}">{{ item }}</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}

            {% if recipient_organization_objs %}
                <table class="table">
                    <tbody>
                    {% for item in recipient_organization_objs %}
                        <tr>


                            <td><a href="/archives/organization/{{ item.pk }}">{{ item }}</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}

        {% endif %}

        {% if cced_person_objs or cced_organization_objs %}
            <p>Cced to</p>

            {% if cced_person_objs %}
                <table class="table">

                    <tbody>
                    {% for item in cced_person_objs %}
                        <tr>


                            <td><a href="/archives/person/{{ item.pk }}">{{ item }}</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}

            {% if cced_organization_objs %}
                <table class="table">

                    <tbody>
                    {% for item in cced_organization_objs %}
                        <tr>


                            <td><a href="/archives/organization/{{ item.pk }}">{{ item }}</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}

        {% endif %}


        </div>
    </div>

{% endblock %}