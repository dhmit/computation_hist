
{% extends "base.jinja2" %}

{% block title %}{{ doc_obj.title }}{% endblock %}

{% block content %}
<div class="row">
    <div class="col">
        <h3>{{ doc_obj.title }}
        {% if doc_obj.date %}
            ({{ doc_obj.date }})
        {% endif %}
        </h3>

        {{ doc_obj.type|capitalize }}
        {% if author_person_objs or author_organization_objs %}
            by
            {% if author_person_objs %}
                {% for item in author_person_objs %}
                    <a class="doc_metadata" href="{{ item.url }}">{{ item }}</a>{% if not loop.last or author_organization_objs %};{% endif %}
                {% endfor %}
            {% endif %}
            {% if author_organization_objs %}
                {% for item in author_organization_objs %}
                    <a class="doc_metadata" href="{{ item.url }}">{{ item }}</a>{% if not loop.last %};{% endif %}
                {% endfor %}
            {% endif %}
        {% endif %}

        {% if recipient_person_objs or recipient_organization_objs%}
            to
            {% if recipient_person_objs %}
                    {% for item in recipient_person_objs %}
                        <a class="doc_metadata" href="{{ item.url }}">{{ item }}</a>{% if not loop.last or recipient_organization_objs %};{% endif %}
                    {% endfor %}
            {% endif %}
            {% if recipient_organization_objs %}
                    {% for item in recipient_organization_objs %}
                        <a class="doc_metadata" href="{{ item.url }}">{{ item }}</a>{% if not loop.last %};{% endif %}
                    {% endfor %}
            {% endif %}
        {% endif %}

        {% if cced_person_objs or cced_organization_objs %}
            cced to
            {% if cced_person_objs %}
                {% for item in cced_person_objs %}
                    <a class="doc_metadata" href="{{ item.url }}">{{ item }}</a>{% if not loop.last or cced_organization_objs%};{% endif %}
                {% endfor %}
            {% endif %}

            {% if cced_organization_objs %}
                {% for item in cced_organization_objs %}
                    <a class="doc_metadata" href="{{ item.url }}">{{ item }}</a>{% if not loop.last %};{% endif %}
                {% endfor %}
            {% endif %}
        {% endif %}

    </div>
</div>
<div class="row d-none d-md-inline">
    <div class="col text-center">
        {% if prev_doc %}
            <a href="{{ prev_doc.url }}" class="btn btn-outline-secondary float-left"
               role="button">&laquo; Previous</a>
        {% endif %}

        <a href="{{ doc_obj.folder.box.url }}">Box #{{ doc_obj.folder.box }}</a> | <a href="{{ doc_obj.folder.url }}">Folder: {{ doc_obj.folder }}</a>

        {% if next_doc %}
            <a href="{{ next_doc.url }}" class="btn btn-outline-secondary btn-small float-right"
               role="button">Next &raquo;</a>
        {% endif %}
    </div>
</div>

    <div class="row">
        <div class="col">
            <iframe src="{{ static('ext/pdfjs/web/viewer.html') }}?file={{ doc_pdf_url }}"
                    height="900"
                    width="100%">
            </iframe>
        </div>

    </div>

{% endblock %}
