
{% extends "base.jinja2" %}

{% block title %} {{ doc_obj }} {% endblock %}

{% block header %}

    {{ doc_obj }}

{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-10">
            <div class="row" >
                <iframe src={{ doc_pdf_url }} height="900" width="90%"> </iframe>
            </div>
            <div class="row">
                <!--space for bottom hyperlinks to click to neighbouring documents -->
            </div>
        </div>
        <div class="col-sm-2 info_bar"  style="background-color: #343a40; color: #eeeeee;">
            <h3> About this Document: </h3>
            {% if author_person_objs or author_organization_objs %}
                <h5>Written by:</h5>
                {% if author_person_objs %}
                        {% for item in author_person_objs %}
                                <a href="/archives/person/{{ item.pk }}">{{ item }}</a>
                        {% endfor %}
                {% endif %}
                {% if author_organization_objs %}
                        {% for item in author_organization_objs %}
                                <a href="/archives/organization/{{ item.pk }}">{{ item }}</a>
                        {% endfor %}
                {% endif %}
            {% endif %}

            <h5> Written on: </h5>
            {{ doc_obj.date }}

            {% if recipient_person_objs or recipient_organization_objs%}
                <h5>Written to:</h5>
                {% if recipient_person_objs %}
                        {% for item in recipient_person_objs %}
                                <a href="/archives/person/{{ item.pk }}">{{ item }}</a>
                        {% endfor %}
                {% endif %}
                {% if recipient_organization_objs %}
                        {% for item in recipient_organization_objs %}
                                <a href="/archives/organization/{{ item.pk }}">{{ item }}</a>
                        {% endfor %}
                {% endif %}
            {% endif %}

            {% if cced_person_objs or cced_organization_objs %}
                <h5>Cced to:</h5>
                {% if cced_person_objs %}
                        {% for item in cced_person_objs %}
                                <a href="/archives/person/{{ item.pk }}">{{ item }}</a>
                        {% endfor %}
                {% endif %}
                {% if cced_organization_objs %}
                        {% for item in cced_organization_objs %}
                                <a href="/archives/organization/{{ item.pk }}">{{ item }}</a>
                        {% endfor %}
                {% endif %}
            {% endif %}
            <h5> Type: </h5>
                {{ doc_obj.type }}
            <h5> Box No:</h5>
                <a href="/archives/box/{{ doc_obj.folder.box }}" > {{ doc_obj.folder.box }}</a>
            <h5> Folder: </h5>
                <a href="/archives/folder/{{ doc_obj.folder.id }}"> {{ doc_obj.folder }} </a>
            <br>
            <div class="row">
                    {% if doc_obj.doc_id != 1 %}
                    <a href="doc_obj" class="btn btn-primary btn-block"
                       role="button">Previous Doc</a>
                    {% endif %}
                    <button type="button" class="btn btn-primary btn-block">Next Document</button>
            </div>
        </div>
    </div>

{% endblock %}
